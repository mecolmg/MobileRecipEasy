            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyListsActivity"
            android:label="@string/lists_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyFavoritesActivity"
            android:label="@string/favorites_label"
            android:theme="@style/AppTheme.NoActionBar" />
